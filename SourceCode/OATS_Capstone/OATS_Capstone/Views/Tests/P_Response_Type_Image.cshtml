@model OATS_Capstone.Models.AbsResponseQuestion
<div class="nt-qitem nt-qitem-review">
    <div class="nt-qnum nt-qnum-letter">@Model.LabelOrder</div>
    <p align="center" class="nt-qimg-cont" style="display: block">
        @{
            var path = Model.ImageUrl;
            var isImage = false;
            if (!string.IsNullOrEmpty(path))
            {
                path = path.Trim();
                var realPath = HttpContext.Current.Server.MapPath(path);
                if (File.Exists(realPath)) { isImage = true; }
            }
            if (isImage)
            {
            <img alt="@Path.GetFileName(path)" src="@Url.Content(path)" width="300" height="300"/>
            }
            else
            {
            <img alt="default" src="@Url.Content("~/Style/img/photo_not_available.jpg")" width="300" height="300" />
            }
        }

    </p>

    <div class="nt-qtext nt-qimg-desc ">
        <p>
            <br />
        </p>

    </div>
    <!-- isImg END -->
    <div class="nt-qanscont nt-sortable"></div>
    <div class="nt-qfoot">
        <button class="nt-btn-text nt-qcomm-toggle" style="display: none;">Comment</button>
    </div>
    <div class="nt-qcomm" style="display: none;">
        <textarea class="nt-comm" placeholder="Comment for the student about this response"></textarea>
    </div>
</div>
