@model OATS_Capstone.Models.InvitationMasterModel
@{
    var studentsInvited = Model.InvitationList.Where(i => i.User.Role.RoleID == 2);
    var teachersInvited = Model.InvitationList.Where(i => i.User.Role.RoleID == 3);
    var studentList = Model.UserList.Where(i => i.RoleID==2);
    var teacherList = Model.UserList.Where(i => i.RoleID == 3);
    }
<div class="nt-asm-inv">
  <div class="nt-asm-inv-cont" style="height: 440px; overflow-y: auto;">
    <div class="nt-asm-inv-table-cont nt-learner" id="36ab7f668914495c9a2cd85447c14fe9"><div class="nt-asm-inv-head">  
  <div class="nt-asm-inv-title"><span>Invited Students</span><span class="nt-cnt"></span></div>
</div>
<table>
  <thead>
    <tr>
      <th class="nt-desc">Name</th>
      <th class="nt-desc">Email Address</th>
      <th class="nt-ctrl"></th>
    </tr>
  </thead>
  <tbody>
  @foreach(var invitations in studentsInvited)
  {
      <tr id="87141f33b0bc4ec49f7d0be02e675a64"><td class="nt-desc nt-name">@invitations.User.FirstName<span class="nt-hl-sort">{T}</span></td>
<td class="nt-desc nt-email">@invitations.User.UserMail</td>
<td class="nt-ctrl">
  <button class="nt-btn-icon nt-btn-rm nt-guide" data-guide="inv_learner_remove" data-original-title="Remove">
    <i class="icon-remove"></i>
  </button>
</td>
</tr>
  }
  </tbody>
  <tfoot>
    <tr>
      <td colspan="3">
        <a href="#myModal" role="button" style="visibility: visible; display: inline-block;"  class="btn" data-toggle="modal" data-action="invite" data-guide="inv_learner_more">
          <i class="icon-envelope"></i>
          Invite More Students
        </a>
        <button style="visibility: visible; display: block;" class="nt-btn-light nt-icon-left nt-guide" data-action="remove" data-guide="inv_remove">
          <i class="icon-remove"></i>
          Remove
        </button>
        <button style="visibility: visible; display: block;" class="nt-btn-light nt-icon-left nt-guide" data-action="re_invite" data-guide="inv_reinv">
          <i class="icon-repeat"></i>
          Re-invite
        </button>
      </td>
    </tr>
  </tfoot>
</table>

</div>
