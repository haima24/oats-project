@model OATS_Capstone.Models.OverviewScoreTests
<div id="sidebar">
    <div class="nt-acc-content nt-acc-content-noheader nt-acc-content-resp">
        <div class="nt-ctrl-search">
            <div class="nt-search-box">
                <input type="text" placeholder="Search" class="nt-search-input ">
                <i class="t-icon icon-search"></i>
                <button class="nt-btn-icon nt-btn-clear ">
                    <i class="icon-remove-sign"></i>
                </button>
            </div>
            <div class="nt-ctrl-search-tags nt-taglist"></div>
        </div>
        <div class="nt-ctrl-list" score-tab="true">
            <div class="nt-ctrl-line"></div>
            <div class="nt-clb-header">
                <div class="nt-clb-header-control">
                    <input type="checkbox" checked="checked" class="nt-ctrl-all">
                </div>
                <div class="nt-clb-header-content">
                    <div class="nt-clb-header-label">
                        <span>Student</span>
                        <button class="nt-btn-circle-mini nt-sort-desc"><i class="t-icon i-caret-down"></i></button>
                        <button class="nt-btn-circle-mini nt-sort-asc active"><i class="t-icon i-caret-up"></i></button>
                    </div>
                    <div class="nt-clb-header-desc">
                        <span>Score</span>
                        <button class="nt-btn-circle-mini nt-sort-desc"><i class="t-icon i-caret-down"></i></button>
                        <button class="nt-btn-circle-mini nt-sort-asc"><i class="t-icon i-caret-up"></i></button>
                    </div>
                </div>
            </div>
            <div class="nt-ctrl-line"></div>
            <div id="respUsers" style="max-height: 450px; overflow-y: auto;">
                <div class="nt-clb-item nt-clb-item-multi nt-clb-item-sel">
                    <div class="nt-clb-item-control">
                        <input type="checkbox" checked="checked" user-id="10">
                    </div>
                    <div class="nt-clb-item-content">
                        <div class="nt-clb-item-label">lkasjd</div>
                        <div class="nt-clb-item-desc">47%</div>
                    </div>
                </div>
                <div class="nt-clb-item nt-clb-item-multi nt-clb-item-sel">
                    <div class="nt-clb-item-control">
                        <input type="checkbox" checked="checked" user-id="8">
                    </div>
                    <div class="nt-clb-item-content">
                        <div class="nt-clb-item-label">First Name of Teacher 1</div>
                        <div class="nt-clb-item-desc">40%</div>
                    </div>
                </div>
                <div class="nt-clb-item nt-clb-item-multi nt-clb-item-sel">
                    <div class="nt-clb-item-control">
                        <input type="checkbox" checked="checked" user-id="9">
                    </div>
                    <div class="nt-clb-item-content">
                        <div class="nt-clb-item-label">First Name of Teacherrer34rer</div>
                        <div class="nt-clb-item-desc">47%</div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>

<div class="nt-scores-cont" style="height: 500px; overflow-y: hidden;">
    <div class="nt-overview-list" style="overflow-y: auto; height: 85%; padding-left: 10px;">
        <div class="nt-user">
            <div class="nt-name">
                <span class="nt-title">Name:</span>
                <span class="nt-descr">lkasjd,First Name of Teacher 1,First Name of Teacherrer34rer</span>
            </div>

        </div>
        <table id="overview" style="width: 100%; border-collapse: collapse;">
            <tr class="GridviewScrollHeader">
                <td colspan="2">Student</td>
                @foreach (var item in Model.AllTests)
                {
                    <td rowspan="2">@item.TestTitle</td>    
                }

            </tr>
            <tr class="GridviewScrollHeader">
                <td>Name</td>
                <td>Overall</td>
            </tr>
            @foreach (var item in Model.AllUsers)
            {
                <tr class="GridviewScrollItem">
                <td style="background-color: #EFEFEF;">@(string.IsNullOrEmpty(item.Name)?item.UserMail:item.Name)</td>
                <td style="background-color: #EFEFEF;">FR-M94B-38</td>
                <td>1349.6000</td>
                <td>739.0410</td>
                <td>500</td>
                <td>375</td>
                <td>7/1/2005 12:00:00 AM</td>
            </tr>
            }
            
        </table>
    </div>
    <div class="nt-scores-footer">
        <div class="scorecontrols">
            <button class="nt-btn-submit">Send Scores...</button>
            <button id="btn-download-score" class="nt-btn-submit">Download</button>
        </div>
    </div>
</div>
