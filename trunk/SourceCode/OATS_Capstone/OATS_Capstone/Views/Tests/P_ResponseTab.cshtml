@using OATS_Capstone.Models
@model OATS_Capstone.Models.ResponseTest
@if (Model.ResponseUserListCount == 0)
    {
        <div class="nt-checklist-ctrl">
            <div class="nt-msg">No responses found: No students done.</div>
        </div>
    }
    else
    {
<div id="sidebar">
    <div style="" class="nt-acc-content" id="learners">
        <div class="nt-ctrl-search">
            <div class="nt-search-box">
                <input type="text" placeholder="Search..." class="nt-search-input" notation="Response" />
                <i class="t-icon icon-search"></i>


                <button class="nt-btn-icon nt-btn-clear ">
                    <i class="icon-remove-sign"></i>
                </button>
            </div>
            <div class="nt-ctrl-search-tags nt-taglist"></div>
        </div>
        <div class="nt-ctrl-list" response-tab="true">
            <div class="nt-ctrl-line"></div>
            <div class="nt-clb-header">
                <div class="nt-clb-header-control">
                    <input type="checkbox" checked="checked" class="nt-ctrl-all" />
                </div>
                <div class="nt-clb-header-content">
                    <div class="nt-clb-header-label">
                        <span>Student</span>
                        <button class="nt-btn-circle-mini nt-sort-desc" data-order="desc" data-key="name"><i class="t-icon i-caret-down"></i></button>
                        <button class="nt-btn-circle-mini nt-sort-asc" data-order="asc" data-key="name"><i class="t-icon i-caret-up"></i></button>
                    </div>
                    <div class="nt-clb-header-desc">
                        <span class="nt-guide" data-guide="resp_score_title">Score</span>
                        <button class="nt-btn-circle-mini nt-sort-desc" data-order="desc" data-key="percent"><i class="t-icon i-caret-down"></i></button>
                        <button class="nt-btn-circle-mini nt-sort-asc" data-order="asc" data-key="percent"><i class="t-icon i-caret-up"></i></button>
                    </div>
                </div>
            </div>
            <div class="nt-ctrl-line"></div>
            <div id="respUsers" style="max-height: 400px; overflow-y: auto;">
                @foreach (var uInTest in Model.ResponseUserList)
                {
                    @Html.Partial("P_User_Item",uInTest)
                }

            </div>
        </div>
    </div>
</div>
<div id="response-container">
    @Html.Partial("P_ResponseTab_Inner",Model)
</div>
}
