@using OATS_Capstone.Models
@model OATS_Capstone.Models.AbsResponseQuestion
<div class="nt-qitem nt-qitem-review">
    <div class="nt-qnum ">@Model.LabelOrder</div>
    <div class="nt-qtext">
        <p>@Model.QuestionTitle</p>
    </div>
    <div class="nt-qhctrls">
        <label class="checkbox">
            <input class="nt-scored" type="checkbox"  disabled="disabled" checked="checked" />Scored</label>
    </div>
    <div class="nt-qanscont nt-sortable">
        @foreach (var ans in Model.ResponseAnswers)
        { 
            <div class="nt-qans nt-qans-hover">
                <label class="radio nt-qans-label ">
                    @if(Model.IsOneIdChecked&&ans.UserChooseThisAnswer){
                    <input type="radio" disabled="disabled" checked="checked" />
                    }else{
                    <input type="radio" disabled="disabled" />
                    }
                    <div class="nt-qansdesc">
                        <p>@ans.AnswerContent</p>
                    </div>
                </label>
                <div class="nt-qansrep">
                    @if (Model.IsOneIdChecked && ans.UserChooseThisAnswer)
                    {
                        if (ans.IsRight)
                        {
                            <div class="nt-qansrep-corr"><i class="icon-ok-sign"></i></div>
                        }
                        else
                        {
                            <div class="nt-qansrep-corr"><i class="icon-remove-sign"></i></div> 
                        } 
                    }
                    
                    @if (ans.IsRight)
                    {
                        <div class="nt-qpts">@ans.Score pt</div>
                        <div class="nt-qansrep-color" style="background-color: green; opacity: 1"></div>
                    }else{
                        <div class="nt-qpts"></div>
                    <div class="nt-qansrep-color" style="background-color: green; opacity: 0"></div>
                    }
                    @if(Model.IsOneIdChecked){
                    <div class="nt-qansrep-pct" style="visibility: hidden;"></div>
                    }else{
                    <div class="nt-qansrep-pct" style="visibility: visible;">@ans.AnswerPercent</div>
                    }
                </div>
            </div>  
        }
    </div>


    <div class="nt-qfoot">

        @if(!Model.IsOneIdChecked){
        <div class="nt-qrep" style="">
            <span>Correct:</span><span class="nt-crate">@Model.CorrectPercent (@Model.CorrectPraction)</span>
        </div>
        }else{

        <div class="nt-qoepts">
            <span>Points: @Model.UserScore</span>
            <span class="nt-pts"></span>
            <span>out of @Model.ChoiceScore pt</span>
            <span class="nt-ok"><i class="icon-ok"></i></span>
            <span class="nt-hl-words-warn"><i class="icon-warning-sign"></i></span>
        </div>
        }
    </div>
</div>
