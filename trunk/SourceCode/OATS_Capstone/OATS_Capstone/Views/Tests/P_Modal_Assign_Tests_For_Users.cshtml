@model IEnumerable<OATS_Capstone.Models.User>
<div id="modalPopupUser" class="modal hide fade">
    <input id="role" type="hidden" value="@ViewBag.Role" />
    <div class="modal-header">
        <div class="modal-title">Invite More @ViewBag.Role</div>
    </div>
    <div class="modal-body">
        <div class="nt-ctrl-search ui-droppable">
            <div class="nt-search-box">
                <input type="text" placeholder="Search" class="nt-search-input" autocomplete="off"/>
                <i class="t-icon search"></i>
                <button class="nt-btn-icon nt-btn-clear " style="display: none;">
                    <i class="icon-remove-sign"></i>
                </button>
            </div>
            <div class="nt-ctrl-search-tags nt-taglist"></div>
        </div>
        <div class="nt-ctrl-list">
            <div class="nt-ctrl-line"></div>
            <div class="nt-clb-header">
                <div class="nt-clb-header-control">
                    <input type="checkbox" checked="checked" class="nt-ctrl-all" />
                </div>
                <div class="nt-clb-header-content">
                    <div class="nt-clb-header-label">
                        <span>Name</span>
                    </div>
                    <div class="nt-clb-header-desc">
                        <span>Email Address</span>
                    </div>
                </div>
                <div class="nt-loader" style="display: none;"></div>
            </div>
            <div class="nt-ctrl-line"></div>
            <div class="nt-clb-empty"></div>
            <div class="nt-clb-list">

                @foreach (var user in Model)
                {
                    @Html.Partial("P_Modal_Invitation_User_Item",user)
                }


            </div>
        </div>
        <div class="nt-ctrl-foot" style="">
            <a class="btn btn-primary nt-btn-outside" toggle="inactive" href="#"><i class="icon-plus icon-white"></i>Invite Outside</a>
            <div class="nt-invite-outside">
                <input type="text" class="span1 nt-name-outside" placeholder="Name" />
                <input type="text" class="span2 nt-email-outside" placeholder="Email Address" />
                <button class="btn btn-primary nt-btn-add-outside">Add</button>
            </div>
            <div class="clearfix"></div>
        </div>

    </div>
    <div class="modal-footer">
        <button class="nt-btn-ok nt-btn-submit t-icon-left">
            <i class="icon-envelope"></i>
            Invite
        </button>
        <button class="nt-btn-dark nt-btn-cancel" data-dismiss="modal">Cancel</button>
    </div>
</div>