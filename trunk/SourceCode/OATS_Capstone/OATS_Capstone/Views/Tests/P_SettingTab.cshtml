@model OATS_Capstone.Models.Test
  <div class="nt-asm-settings" style="height: 400px; overflow-y: auto;">
  <div class="nt-panel">
    <div class="nt-section">
      <div class="nt-header">Test Access Control</div>
      <ul>
        <li>
          <label class="checkbox  nt-guide" data-guide="delivery_opt_accescode">
            <input id="asm_access_code_only" type="checkbox">Require test access code
          </label>
          <div id="asm_access_code" class="nt-access-code hide"></div>
        </li>
        <li>
          <label class="checkbox  nt-guide" data-guide="delivery_opt_nocheat">
            <input id="asm_nocheat" type="checkbox">Locked-down app access ONLY
          </label>
        </li>
        <li>
          <label class="checkbox  nt-guide" data-guide="delivery_opt_1submit">
            <input id="asm_ans_final" type="checkbox">One Submission Only - Time Limit:
            <input id="asm_time_limit" type="text" class="nt-guide" data-guide="delivery_opt_timelimit" disabled="disabled">mins
          </label>
        </li>
        <li>
          <label class="checkbox  nt-guide" data-guide="delivery_opt_selfreg">
            <input id="asm_selfreg" type="checkbox">Student self-registration allowed
          </label>
          <div id="asm_selfreg_url" class="nt-url hide nt-guide" data-guide="delivery_opt_selfreg_link"></div>
        </li>
      </ul>
    </div>
    <div class="nt-section">
      <div class="nt-header">Results &amp; Reporting</div>
      <ul>
        <li>
          <label class="checkbox  nt-guide" data-guide="delivery_opt_selfassess">
            <input id="asm_selfasm" type="checkbox">Immediate self-assessment
          </label>
        </li>
        <li>
          <label class="checkbox  nt-guide" data-guide="delivery_opt_scoreaccess">
            <input id="asm_learn_acc_own_rep" type="checkbox">Students can access their own score reports
          </label>
        </li>
        <li>
          <label class="checkbox checkbox-indent nt-guide" data-guide="delivery_opt_finalreponly">
            <input id="asm_final_reports_only" type="checkbox">Only once all essay and short answer scores are approved
          </label>
        </li>
        <li>
          <label class="checkbox  nt-guide" data-guide="delivery_opt_grades">
            <input id="asm_show_grades" type="checkbox">Grades in Score Report
            <button id="btnAdjustGrading" class="nt-btn-text">Adjust Grading...</button>
          </label>
        </li>
      </ul>
    </div>
    <div class="nt-section">
      <div class="nt-header">Test Formatting</div>
      <ul>
        <li>
          <label class="checkbox  nt-guide" data-guide="delivery_opt_rndq">
            <input id="asm_randomize" type="checkbox">Randomize the order of questions
          </label>
        </li>
        <li>
          <label class="checkbox  nt-guide" data-guide="delivery_opt_1qpp">
            <input id="asm_single_question_view" type="checkbox">One question per page
          </label>
        </li>
        <li>
          <label class="checkbox  nt-guide" data-guide="delivery_opt_showpts">
            <input id="asm_show_max_scores" type="checkbox" checked="checked">Show question point value
          </label>
        </li>
      </ul>
    </div>
  </div>
</div>